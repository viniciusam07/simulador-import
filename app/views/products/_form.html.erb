<%= simple_form_for @product do |form| %>
  <div class="form-group">
    <%= form.input :product_name, label: 'Nome do Produto', required: true %>
  </div>

  <div class="form-group">
    <%= form.input :hs_code, label: 'HS Code' %>
  </div>

  <div data-controller="ncm-autocomplete">
    <div class="form-group">
      <%= form.label :ncm, "NCM" %>
      <%= form.text_field :ncm, id: "ncm-input", class: "form-control", data: { "ncm-autocomplete-target": "input", action: "input->ncm-autocomplete#search change->ncm-autocomplete#select" }, list: "ncm-suggestions" %>
    </div>

    <datalist id="ncm-suggestions" data-ncm-autocomplete-target="suggestions"></datalist>

    <div class="form-group">
      <label for="ncm-description">Descrição</label>
      <input type="text" id="ncm-description" class="form-control" readonly data-ncm-autocomplete-target="description">
    </div>
  </div>

  <div class="form-group">
    <%= form.input :unit_of_measure, label: 'Unidade de Medida', required: true %>
  </div>

  <div class="form-group">
    <%= form.input :quantity_per_box, label: 'Quantidade por Caixa Master' %>
  </div>

  <div class="form-group">
    <%= form.input :unit_net_weight, label: 'Peso Líquido por Unidade (kg)', required: true, step: 0.001 %>
  </div>

  <div class="form-group">
    <%= form.input :unit_price, label: 'Preço Unitário', required: true, step: 0.01 %>
  </div>

  <%= form.button :submit, 'Salvar Produto', class: 'btn btn-primary' %>
<% end %>
