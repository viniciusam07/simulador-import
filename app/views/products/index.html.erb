<div class="container mt-5">
  <h1 class="text-center mb-4">Produtos</h1>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <%= link_to 'Novo Produto', new_product_path, class: 'btn btn-success' %>
    <%= link_to 'Voltar', authenticated_root_path, class: 'btn btn-secondary' %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Nome do Produto</th>
            <th>HS Code</th>
            <th>NCM</th>
            <th>Unidade de Medida</th>
            <th>Quantidade por Caixa</th>
            <th>Peso Líquido</th>
            <th>Preço Unitário</th>
            <th class="text-center">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.product_name %></td>
              <td><%= product.hs_code %></td>
              <td><%= product.ncm %></td>
              <td><%= product.unit_of_measure %></td>
              <td><%= product.quantity_per_box %></td>
              <td><%= number_with_precision(product.unit_net_weight, precision: 2) %> kg</td>
              <td><%= number_to_currency(product.unit_price, unit: "R$") %></td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <%= link_to product_path(product), class: 'btn btn-sm btn-outline-primary', title: 'Visualizar' do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_product_path(product), class: 'btn btn-sm btn-outline-secondary', title: 'Editar' do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to product_path(product), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-outline-danger', title: 'Excluir' do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
