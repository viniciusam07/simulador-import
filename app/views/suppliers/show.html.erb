<div class="container mt-5">
  <div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
      <h1 class="text-center mb-4">Detalhes do Fornecedor</h1>

      <div class="mb-3">
        <strong>Razão Social:</strong>
        <p class="text-muted"><%= @supplier.corporate_name %></p>
      </div>

      <div class="mb-3">
        <strong>Nome Fantasia:</strong>
        <p class="text-muted"><%= @supplier.trade_name %></p>
      </div>

      <div class="mb-3">
        <strong>País:</strong>
        <p class="text-muted"><%= @supplier.country %></p>
      </div>

      <div class="text-center mt-4">
        <%= link_to 'Voltar', suppliers_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
