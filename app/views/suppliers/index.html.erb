<div class="container mt-5">
  <h1 class="text-center mb-4">Fornecedores</h1>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <%= link_to 'Novo Fornecedor', new_supplier_path, class: 'btn btn-success' %>
    <%= link_to 'Voltar', authenticated_root_path, class: 'btn btn-secondary' %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Razão Social</th>
            <th>Nome Fantasia</th>
            <th>País</th>
            <th class="text-center">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @suppliers.each do |supplier| %>
            <tr>
              <td><%= supplier.corporate_name %></td>
              <td><%= supplier.trade_name %></td>
              <td><%= supplier.country %></td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <%= link_to supplier_path(supplier), class: 'btn btn-sm btn-outline-primary', title: 'Visualizar' do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_supplier_path(supplier), class: 'btn btn-sm btn-outline-secondary', title: 'Editar' do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to supplier_path(supplier), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-outline-danger', title: 'Excluir' do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
