<h1>Fornecedores</h1>
<%= link_to 'Novo Fornecedor', new_supplier_path, class: 'btn btn-primary' %>
<%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>

<table>
  <thead>
    <tr>
      <th>Razão Social</th>
      <th>Nome Fantasia</th>
      <th>País</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.corporate_name %></td>
        <td><%= supplier.trade_name %></td>
        <td><%= supplier.country %></td>
        <td>
          <%= link_to 'Visualizar', supplier_path(supplier) %> |
          <%= link_to 'Editar', edit_supplier_path(supplier) %> |
          <%= link_to 'Excluir', supplier_path(supplier), method: :delete, data: { confirm: 'Tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
