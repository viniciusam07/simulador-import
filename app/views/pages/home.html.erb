<div class="container mt-5">
  <h1 class="mb-4 text-center display-5 fw-bold">Painel do Simulador de Importação</h1>
  <p class="text-center text-muted mb-5">Organize simulações, cotações, produtos e dados operacionais com facilidade.</p>

  <div class="row g-4">
    <!-- Simulação -->
    <%= render partial: "shared/dashboard_card", locals: {
      icon: "fas fa-calculator",
      icon_color: "text-primary",
      title: "Simulações",
      description: "Crie novas simulações ou visualize as existentes.",
      actions: [
        { path: new_simulation_path, icon: "fas fa-plus", tooltip: "Nova Simulação", style: "btn-outline-primary" },
        { path: simulations_path, icon: "fas fa-list", tooltip: "Listar Simulações", style: "btn-outline-secondary" }
      ]
    } %>

    <!-- Produtos & Cotações -->
    <%= render partial: "shared/dashboard_card", locals: {
      icon: "fas fa-box-open",
      icon_color: "text-success",
      title: "Produtos & Cotações",
      description: "Gerencie produtos e visualize cotações vinculadas.",
      actions: [
        { path: new_product_path, icon: "fas fa-plus", tooltip: "Novo Produto", style: "btn-outline-success" },
        { path: products_path, icon: "fas fa-list", tooltip: "Listar Produtos", style: "btn-outline-secondary" },
        { path: quotations_path, icon: "fas fa-tags", tooltip: "Ver Cotações", style: "btn-outline-secondary" }
      ]
    } %>

    <!-- Despesas -->
    <%= render partial: "shared/dashboard_card", locals: {
      icon: "fas fa-dollar-sign",
      icon_color: "text-warning",
      title: "Despesas Operacionais",
      description: "Adicione ou edite custos fixos e variáveis.",
      actions: [
        { path: new_expense_path, icon: "fas fa-plus", tooltip: "Nova Despesa", style: "btn-outline-warning" },
        { path: expenses_path, icon: "fas fa-list", tooltip: "Listar Despesas", style: "btn-outline-secondary" }
      ]
    } %>

    <!-- Empresas -->
    <%= render partial: "shared/dashboard_card", locals: {
      icon: "fas fa-building",
      icon_color: "text-dark",
      title: "Empresas",
      description: "Gerencie os dados das empresas importadoras.",
      actions: [
        { path: new_company_path, icon: "fas fa-plus", tooltip: "Nova Empresa", style: "btn-outline-dark" },
        { path: companies_path, icon: "fas fa-list", tooltip: "Listar Empresas", style: "btn-outline-secondary" }
      ]
    } %>

    <!-- Fornecedores -->
    <%= render partial: "shared/dashboard_card", locals: {
      icon: "fas fa-truck",
      icon_color: "text-info",
      title: "Fornecedores",
      description: "Gerencie sua base de fornecedores internacionais.",
      actions: [
        { path: new_supplier_path, icon: "fas fa-plus", tooltip: "Novo Fornecedor", style: "btn-outline-info" },
        { path: suppliers_path, icon: "fas fa-list", tooltip: "Listar Fornecedores", style: "btn-outline-secondary" }
      ]
    } %>

    <!-- Cronogramas -->
    <%= render partial: "shared/dashboard_card", locals: {
      icon: "fas fa-calendar-alt",
      icon_color: "text-secondary",
      title: "Cronogramas",
      description: "Organize as etapas das importações.",
      actions: [
        { path: cronogramas_path, icon: "fas fa-list", tooltip: "Ver Cronogramas", style: "btn-outline-secondary" }
      ]
    } %>
  </div>
</div>
