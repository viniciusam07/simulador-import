<div class="container py-4 show-company">
  <!-- Título Principal -->
  <h1 class="mb-4">Detalhes da Empresa</h1>

  <!-- Detalhes Gerais -->
  <div class="row">
    <!-- Coluna 1 -->
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <i class="fas fa-info-circle"></i> Informações Gerais
        </div>
        <div class="card-body">
          <ul class="list-group mb-3">
            <li class="list-group-item">
              <strong>Nome Fantasia:</strong> <%= @company.name %>
            </li>
            <li class="list-group-item">
              <strong>Razão Social:</strong> <%= @company.corporate_name %>
            </li>
            <li class="list-group-item">
              <strong>CNPJ:</strong> <%= @company.cnpj %>
            </li>
            <li class="list-group-item">
              <strong>Segmento:</strong> <%= @company.segment %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Coluna 2 -->
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
          <i class="fas fa-map-marker-alt"></i> Localização
        </div>
        <div class="card-body">
          <ul class="list-group mb-3">
            <li class="list-group-item">
              <strong>Endereço:</strong> <%= @company.address %>
            </li>
            <li class="list-group-item">
              <strong>Cidade:</strong> <%= @company.city %>
            </li>
            <li class="list-group-item">
              <strong>Estado:</strong> <%= @company.state %>
            </li>
            <li class="list-group-item">
              <strong>CEP:</strong> <%= @company.zip_code %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Informações Adicionais -->
  <div class="card mb-4">
    <div class="card-header bg-primary text-white">
      <i class="fas fa-building"></i> Informações Adicionais
    </div>
    <div class="card-body">
      <ul class="list-group mb-3">
        <li class="list-group-item">
          <strong>Tipo de Empresa:</strong> <%= @company.company_type %>
        </li>
        <li class="list-group-item">
          <strong>Regime Tributário:</strong> <%= @company.tax_regime %>
        </li>
      </ul>
    </div>
  </div>

  <!-- Botões de Ação -->
  <div class="btn-group mt-4" role="group">
    <%= link_to 'Editar Empresa', edit_company_path(@company), class: 'btn btn-primary' %>
    <%= link_to 'Voltar', companies_path, class: 'btn btn-secondary' %>
  </div>
</div>
