<div class="container mt-5">
  <h1 class="text-center mb-4">Empresas</h1>

  <!-- Botões de Ação -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <%= link_to 'Nova Empresa', new_company_path, class: 'btn btn-success' %>
    <%= link_to 'Voltar', authenticated_root_path, class: 'btn btn-secondary' %>
  </div>

  <!-- Tabela de Empresas -->
  <div class="card shadow-sm">
    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Nome Fantasia</th>
            <th>CNPJ</th>
            <th>Segmento</th>
            <th>Tipo</th>
            <th>Estado</th>
            <th>Cidade</th>
            <th class="text-center">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td><%= company.name %></td>
              <td><%= company.cnpj %></td>
              <td><%= company.segment %></td>
              <td><%= company.company_type %></td>
              <td><%= company.state %></td>
              <td><%= company.city %></td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <%= link_to company_path(company), class: 'btn btn-sm btn-outline-primary', title: 'Visualizar' do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_company_path(company), class: 'btn btn-sm btn-outline-secondary', title: 'Editar' do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to company_path(company), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-outline-danger', title: 'Excluir' do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Paginação -->
  <div class="d-flex justify-content-center mt-4">
    <%= pagy_nav(@pagy) if @pagy %>
  </div>
</div>
