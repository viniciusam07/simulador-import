<div class="container mt-5">
  <div class="card shadow-sm mx-auto" style="max-width: 400px;">
    <div class="card-body">
      <h2 class="text-center mb-4">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="mb-4">
          <%= f.label :email, "Email address", class: "form-label" %>
          <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control", placeholder: "Your email address", autocomplete: "email" }, label: false %>
        </div>

        <div class="mb-4">
          <%= f.label :password, "Password", class: "form-label" %>
          <% if @minimum_password_length %>
            <%= f.input :password, required: true, hint: "#{@minimum_password_length} characters minimum", input_html: { class: "form-control", placeholder: "Password", autocomplete: "new-password" }, label: false %>
          <% else %>
            <%= f.input :password, required: true, input_html: { class: "form-control", placeholder: "Password", autocomplete: "new-password" }, label: false %>
          <% end %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
          <%= f.input :password_confirmation, required: true, input_html: { class: "form-control", placeholder: "Confirm your password", autocomplete: "new-password" }, label: false %>
        </div>

        <div>
          <%= f.button :submit, "Sign up", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
