<div class="container mt-5">
  <div class="card shadow-sm mx-auto" style="max-width: 400px;">
    <div class="card-body">
      <h2 class="text-center mb-4">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-4">
          <%= f.label :email, "Email address", class: "form-label" %>
          <%= f.input :email, required: false, autofocus: true, input_html: { class: "form-control", placeholder: "Your email address", autocomplete: "email" }, label: false %>
        </div>

        <div class="mb-4">
          <%= f.label :password, "Password", class: "form-label" %>
          <%= f.input :password, required: false, input_html: { class: "form-control", placeholder: "Password", autocomplete: "current-password" }, label: false %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-4">
            <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
            <%= f.label :remember_me, "Keep me logged in", class: "form-check-label", for: "remember_me" %>
          </div>
        <% end %>

        <div>
          <%= f.button :submit, "Sign in", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
