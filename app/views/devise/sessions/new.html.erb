<div class="container-fluid vh-100 d-flex">
  <!-- Coluna de Login -->
  <div class="col-md-3 d-flex align-items-center justify-content-center bg-white p-5">
    <div class="w-100 text-center">
      <!-- Logo -->
      <%= image_tag "heyship_logo_alta.png", alt: "Heyship Logo", class: "mb-4 img-fluid logo" %>
      <h2 class="mb-4">Entre na sua conta</h2>

      <!-- FormulÃ¡rio de Login -->
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.input :email, required: true, input_html: { class: "form-control", placeholder: "Seu e-mail", autocomplete: "email" }, label: false %>
        </div>

        <div class="mb-3">
          <%= f.input :password, required: true, input_html: { class: "form-control", placeholder: "Sua senha", autocomplete: "current-password" }, label: false %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3 text-start">
            <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
            <%= f.label :remember_me, "Manter-me conectado", class: "form-check-label", for: "remember_me" %>
          </div>
        <% end %>

        <div>
          <%= f.button :submit, "Entrar", class: "btn btn-primary w-100 gradient-button" %>
        </div>
      <% end %>

      <!-- Links Auxiliares -->
      <div class="text-center mt-4">
        <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "d-block mb-2 text-muted" %>
        <%= link_to "NÃ£o tem uma conta? Cadastre-se!", new_registration_path(resource_name), class: "d-block text-primary" %>
      </div>
    </div>
  </div>

  <!-- Coluna de Imagem -->
  <div class="col-md-9 d-none d-md-block p-0">
    <div class="h-100 w-100" style="background-image: url('<%= asset_path("login_image_heyship.png") %>'); background-size: cover; background-position: center;">
  </div>
</div>
