<h1>Despesas Padrão</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Valor Padrão</th>
      <th>Moeda</th>
      <th>Local de Cobrança</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.expense_name %></td>
        <td><%= expense.expense_description %></td>
        <td><%= number_to_currency(expense.expense_default_value, unit: expense.expense_currency) %></td>
        <td><%= expense.expense_currency %></td>
        <td><%= expense.expense_location %></td>
        <td>
          <%= link_to 'Editar', edit_expense_path(expense) %> |
          <%= link_to 'Excluir', expense, method: :delete, data: { confirm: 'Tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nova Despesa', new_expense_path, class: 'btn btn-primary' %>

